<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_large</item>
    </style>

    <style name="WeatherGroup">
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="WeatherGroup.Text_Name" parent="WeatherGroup">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherGroup.Text_Details" parent="WeatherGroup">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="WeatherDetails">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="WeatherDetails.Text_Name" parent="WeatherDetails">
        <item name="android:textSize">@dimen/font_size_extra_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherDetails.Text_Temp" parent="WeatherDetails">
        <item name="android:textSize">@dimen/font_size_xxxx_large</item>
    </style>

    <style name="WeatherDetails.Text_Details" parent="WeatherDetails">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

</resources>